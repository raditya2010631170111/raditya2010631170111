<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- dikimart.barang tree view -->
    <record id="packing_list_view_tree" model="ir.ui.view">
        <field name="name">Packing List</field>
        <field name="model">packing.list</field>
        <field name="arch" type="xml">
            <tree create="0">
                <!-- Add your fields here -->
                <field name="name" />
                <field name="to_partner_id" />
                <field name="delivery_address_id" />
                <field name="invoice_address_id" />
                <field name="state" decoration-success="state == 'done' or state == 'done'" decoration-info="state == 'draft' or state == 'draft'" widget="badge" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="packing_list_view_form" model="ir.ui.view">
        <field name="name">Packing List</field>
        <field name="model">packing.list</field>
        <field name="arch" type="xml">
            <form string="packing.list" create="0">
                <header>
                    <button name="action_validate" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['waiting', 'ready', 'done'])]}" />
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['draft','ready', 'done'])]}" />
                    <button name="action_done" string="Done" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['draft','waiting','done'])]}"/>
                    <button name="action_sign" string="Sign" type="object" invisible="1" />
                    <button name="action_print" string="Print" type="object" invisible="1" />
                    <button name="action_scrap" string="Scrap" type="object" invisible="1" />
                    <button name="action_unlock" string="Unlock" type="object" invisible="1" />
                    <button name="action_cancel" string="Cancel" type="object" invisible="1" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,ready,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="invoice_btn" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="invoice_count" widget="statinfo" string="Invoice"/>
                            <field name='invoice_ids' invisible="1"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline" placeholder="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="no_sc_id" required="1" domain="[('state', '=', 'sale')]" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="to_partner_id" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            <field name="to_partner_country_id" attrs="{'invisible': True}"/>
                            <label for="to_partner_country_id" string="To"/>
                            <div class="o_row" name="to_partner_country_id">
                                <field name="to_city_deliver" nolabel="1" placeholder="City" attrs="{'readonly': ['|','|',  ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                                <field name="to_partner_country_id" nolabel="1" placeholder="Country" attrs="{'readonly': ['|','|', ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            </div>
                            <field name="delivery_address_id"/>
                            <field name="invoice_address_id" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            <label for="country_of_deliver_id" string="Port Of Loading"/>
                            <div class="o_row" name="country_of_deliver_id">
                                <field name="city_deliver" nolabel="1" placeholder="City" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                                <field name="country_of_deliver_id" nolabel="1" placeholder="Country" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            </div>
                            <field name="shipper_id" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            <field name="vessel" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="peb_no" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="marchandise" attrs="{'readonly': [('state', '=', 'done')]}"/>
                        </group>
                        <group>
                            <field name="schedule_date" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            <field name="booking_date" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            <field name="cargo_date" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/>
                            <field name="container" attrs="{'readonly': [('state', '=', 'done')]}" invisible='1'/>
                            <field name="container_no" invisible="1" />
                            <!-- <field name="source_document_id" attrs="{'readonly': ['|','|','|', ('state', '=', 'draft'), ('state', '=', 'waiting'), ('state', '=', 'ready'), ('state', '=', 'done')]}"/> -->
                            <field name="nosc_name" invisible="1"/>
                            <field name="source_document_ids" invisible="1" domain="[('origin', '=', nosc_name)]" />
                            <field name="freight" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="seal_no" invisible="1" />
                            <field name="buyer_po" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="no_st_id" invisible="1"/>
                            <field name="id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="container_operation" string="Container Operation">
                            <field name="container_operation_ids" context="{'default_packing_id': id, }">
                                <!-- <tree editable="bottom"> -->
                                <tree string="Design Detail" >
                                    <field name="picking_ids" widget="many2many_tags" invisible="0"/>
                                    <field name="container_no" readonly="1" invisible="0"/>
                                    <field name="seal_no"/>
                                </tree>
                                
                                <form string="Caption" create="true" delete="true" edit="true" >
                                    <!-- <header>
                                        <button string="Done" name="action_done" type="object" class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}"/>
                                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                                        
                                    </header> -->
                                    <sheet>
                                        <div class="oe_title">
                                            <label for="container_no" class="oe_edit_only" />
                                            <h1><field name="container_no" placeholder="Describe the item..." /></h1>
                                        </div>
                                        <group string="Container Operation">
                                        <group>
                                            <field name="packing_id" readonly="1" string="Packing" invisible="0"/>
                                            <field name="order_id" invisible="1"/>
                                            <!-- <field name="container_no"/> -->
                                            <field name="seal_no"/>
                                            <field name="datetime_now" invisible="1" />
                                            <field name="available_picking_ids"/>
                                            <field name="picking_ids" domain="[('id', 'in', available_picking_ids)]" widget="many2many_tags"/>
                                            <field name="move_container_ids"/>
                                            
                                        </group>
                                            
                                        </group>
                                        <notebook>
                                            <page name="container_operation_line" string="Container Operation Line">
                                                <field name="container_operation_line_ids" >
                                                    <tree create="false" delete="true" edit="false" editable="bottom">
                                                    <field name="move_id" invisible="1"/>
                                                    <field name="container_operation_id" invisible="1"/>
                                                    <field name="container_no"/>
                                                    <field name="order_line_id" invisible="1"/>
													<field name="company_id"/>
                                                    <field name="product_uom_category_id"/>
                                                    <field name="seal_no"/>
                                                    <field name="sku"/>
                                                    <field name="packing_id" readonly="1" string="Packing" invisible="1"/>
                                                    <field name="picking_id" readonly="1" string="No DO"/>
                                                    <field name="product_id" readonly="1"/>
                                                    <field name="product_uom_qty" readonly="1" invisible="1"/>
                                                    <field name="quantity_done" readonly="1" sum="quantity_done"/>
                                                    <field name="product_uom"/>
                                                    <field name="datetime_now" invisible="1" />
                                                    <field name="quantity_before" invisible="1" />
                                                    <field name="product_container_qty"/>
                                                    <field name="pack" sum="pack" />
                                                    <field name="net_weight" sum="net_weight"/>
                                                    <field name="gross_weight" sum="gross_weight"/>
                                                    <field name="means" sum="means"/>
                                                    <field name="unit_price" readonly="0" invisible="1" />
                                                    <field name="amount" readonly="0" invisible="1" />
                                                    </tree>
                                                    
                                                    <form string="Detail Operation Lines" create="true" delete="true" edit="true">
                                                        <sheet>
                                                            <div class="oe_title">
                                                                <label for="container_no" class="oe_edit_only" />
                                                                <h1><field name="container_no" placeholder="Describe the item..." /></h1>
                                                            </div>
                                                            <group>
                                                                
                                                            <group>
                                                                <field name="seal_no"/>
                                                                <field name="product_id"/>
                                                                <field name="quantity_done"/>
                                                                <field name="quantity_before"/>
                                                                <field name="product_container_qty"/>
                                                                <!-- <button string="tes" name="tes" type="object" class="oe_highlight"/> -->
                                                                <!-- <button string="masuk" name="masuk" type="object" class="oe_highlight"/> -->
                                                            </group>
                                                            </group>
                                                            
                                                        </sheet>
                                                    </form>
                                                    
                                                </field>
                                                <field name="move_container_line_ids" invisible="1">
                                                    <tree create="false" delete="true" edit="false" editable="bottom">
                                                    <field name="move_id" invisible="1"/>
                                                    <field name="container_operation_id" invisible="1"/>
                                                    <field name="reference" invisible="1"/>
                                                    <field name="company_id"/>
                                                    <field name="product_uom_category_id"/>
                                                    <field name="container_no"/>
                                                    <field name="order_line_id" invisible="1"/>
                                                    <field name="seal_no"/>
                                                    <field name="sku"/>
                                                    <field name="packing_id" readonly="1" string="Packing" invisible="1"/>
                                                    <field name="picking_id" readonly="1" string="No DO"/>
                                                    <field name="product_id" readonly="1"/>
                                                    <field name="product_uom_qty" readonly="1" invisible="1"/>
                                                    <field name="quantity_done" readonly="1" sum="quantity_done"/>
                                                    <field name="product_uom"/>
                                                    <field name="datetime_now" invisible="1" />
                                                    <field name="quantity_before" invisible="1" />
                                                    <field name="product_container_qty"/>
                                                    <field name="pack" sum="pack" />
                                                    <field name="net_weight" sum="net_weight"/>
                                                    <field name="gross_weight" sum="gross_weight"/>
                                                    <field name="means" sum="means"/>
                                                    <field name="unit_price" readonly="0" invisible="1" />
                                                    <field name="amount" readonly="0" invisible="1" />
                                                    </tree>
                                                    
                                                </field>
                                                    <!-- <button string="tes" name="tes" type="object" class="oe_highlight"/>
                                                    <button string="masuk" name="masuk" type="object" class="oe_highlight"/> -->
                                                <group name="total" col="6" class="mt-2 mt-md-0" style="float: left;">
                                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="total_calculate">
                                                        <!-- <label for="total_qty" string="Total Quantity"/>
                                                        <div class="o_row" name="total_qty">
                                                            <div class="d-flex align-items-center">
                                                                <field name="total_qty" string="Total Quantity" class="mr-2" readonly="1"/>
                                                                <field name="uom_name_line" readonly="1" />
                                                                <field name="total_qty_pcs"/>
                                                                <field name="total_qty_set"/>
                                                                
                                                            </div>
                                                        </div> -->
                                                        <label for="total_qty_pcs" string="Total Quantity Pcs"/>
                                                        <div class="o_row" name="total_qty_pcs">
                                                            <div class="d-flex align-items-center">
                                                                <field name="total_qty_pcs" string="Total Quantity" class="mr-2" readonly="1"/>
                                                                <field name="uom_name_line" readonly="1" />                                                                
                                                            </div>
                                                        </div>
                                                        <label for="total_qty_set" string="Total Quantity Set"/>
                                                        <div class="o_row" name="total_qty_set">
                                                            <div class="d-flex align-items-center">
                                                                <field name="total_qty_set" string="Total Quantity" class="mr-2" readonly="1"/>
                                                                <field name="uom_name_line" readonly="1" />                                                                
                                                            </div>
                                                        </div>
                                                        <label for="total_pack" string="Total Pack"/>
                                                        <div class="o_row" name="total_pack">
                                                            <div class="d-flex align-items-center">
                                                                <field name="total_pack" string="Total Pack" class="mr-2" readonly="1"/>
                                                                <span>ctn</span>
                                                            </div>
                                                        </div>
                                                        <label for="total_net_wght" string="Total Net Weight"/>
                                                        <div class="o_row" name="total_net_wght">
                                                            <div class="d-flex align-items-center">
                                                                <field name="total_net_wght" string="Total Net Weight" class="mr-2" readonly="1"/>
                                                                <field name="weight_uom_name_line" readonly="1"/>
                                                            </div>
                                                        </div>
                                                        <label for="total_gross_wght" string="Total Gross Weight" />
                                                        <div class="o_row" name="total_gross_wght">
                                                            <div class="d-flex align-items-center">
                                                                <field name="total_gross_wght" string="Total Gross Weight" class="mr-2" readonly="1"/>
                                                                <field name="weight_uom_name_line" readonly="1"/>
                                                            </div>
                                                        </div>
                                                        <label for="total_means" string="Total Measurement"/>
                                                        <div class="o_row" name="total_means">
                                                            <div class="d-flex align-items-center">
                                                                <field name="total_means" string="Total Measurement" class="mr-2" readonly="1"/>
                                                                <field name="volume_uom_name_line" readonly="1"/>
                                                            </div>
                                                        </div>
                                                        
                                                    </group>
                                                    <div class="oe_clear"/>
                                                </group>
                                            </page>
                                            
                                        </notebook>
                                      
                                    </sheet>
                                </form>
                                
                            </field>
                        </page>
                        <page name="product_line" string="Detailed Operations">
                            <field name="product_line_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="product_tmpl_id" invisible="1"/>
                                    <field name="move_id" invisible="0"/>
                                    <field name="container_no"/>
                                    <field name="seal_no" />
                                    <field name="mo_no"/>
                                    <field name="account_id"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty" sum="Total Quantity"/>
									<field name="product_container_qty" sum="Total Quantity Container"/> 
                                    <field name="uom_id"/>
                                    <field name="pack" sum="Total Pack(CTN)" readonly="1"/>
                                    <field name="net_weight" sum="Total Net Weight(KGS)" readonly="1"/>
                                    <field name="gross_weight" sum="Total Gross Weight(KGS)" readonly="1"/>
                                    <field name="means" sum="Total Measurement(CBM)" readonly="1"/>
                                    <field name="sku"/>
                                    <field name="william_fob_price" invisible="1" />
                                    <field name="william_set_price" invisible="1"/>
                                    <field name="unit_price" invisible="1" />
                                    <field name="reserved" invisible="1"/>
                                    <field name="qty_done" invisible="1"/>
                                    <field name="amount" invisible="1"/>
                                </tree>
                            </field>
                            <group name="total" col="6" class="mt-2 mt-md-0" style="float: left;">
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_calculate">
                                    <label for="total_qty_pcs" string="Total Quantity Pcs"/>
                                    <div class="o_row" name="total_qty_pcs">
                                        <div class="d-flex align-items-center">
                                            <field name="total_qty_pcs" string="Total Quantity Pcs" class="mr-2" readonly="1"/>
                                            <field name="uom_name_line" readonly="1" />
                                        </div>
                                    </div>
                                    <label for="total_qty_set" string="Total Quantity Set"/>
                                    <div class="o_row" name="total_qty_set">
                                        <div class="d-flex align-items-center">
                                            <field name="total_qty_set" string="Total Quantity Set" class="mr-2" readonly="1"/>
                                            <field name="uom_name_line" readonly="1" />
                                        </div>
                                    </div>
                                    <label for="total_net_wght" string="Total Net Weight"/>
                                    <div class="o_row" name="total_net_wght">
                                        <div class="d-flex align-items-center">
                                            <field name="total_net_wght" string="Total Net Weight" class="mr-2" readonly="1"/>
                                            <field name="weight_uom_name_line" readonly="1"/>
                                        </div>
                                    </div>
                                    <label for="total_gross_wght" string="Total Gross Weight" />
                                    <div class="o_row" name="total_gross_wght">
                                        <div class="d-flex align-items-center">
                                            <field name="total_gross_wght" string="Total Gross Weight" class="mr-2" readonly="1"/>
                                            <field name="weight_uom_name_line" readonly="1"/>
                                        </div>
                                    </div>
                                    <label for="total_means" string="Total Measurement"/>
                                    <div class="o_row" name="total_means">
                                        <div class="d-flex align-items-center">
                                            <field name="total_means" string="Total Measurement" class="mr-2" readonly="1"/>
                                            <field name="volume_uom_name_line" readonly="1"/>
                                        </div>
                                    </div>
                                    <label for="total_pack" string="Total Pack"/>
                                    <div class="o_row" name="total_pack">
                                        <div class="d-flex align-items-center">
                                            <field name="total_pack" string="Total Pack" class="mr-2" readonly="1"/>
                                            <span>ctn</span>
                                        </div>
                                    </div>
                                </group>
                                <div class="oe_clear"/>
                            </group>
							<field name="many_container_operaton_line_ids" invisible="1"/>
                        </page>
                        <page name="Operation_container_line" string="Operation Container" invisible="1">
                            <field name="operation_container_line_ids">
                                <tree editable="bottom">
                                    <field name="no_sc_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="many_no_sc_ids" widget="many2many_tags" domain="[('id', 'in', no_sc_ids)]"/>
                                    <field name="item_container_ids" 
                                    widget="many2many_tags" invisible="1" 
                                    />
                                    <field name="many_container_ids" invisible="1" widget="many2many_tags" domain="[('id', 'in', item_container_ids)]"/>
                                    <field name="container_no"/>
                                    <field name="seal_no"/>
                                </tree>
                            </field>
                        </page>
                        
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="packing_list_action" model="ir.actions.act_window">
        <field name="name">Packing List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">packing.list</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="jidoka_export_menu_root" web_icon="jidoka_export,static/src/img/icon.png" name="Export" sequence="10"/>
    <menuitem id="operation_menu_categ" name="Operation" parent="jidoka_export_menu_root" sequence="5"/>
	<menuitem id="packing_list_menu_act" name="Packing List" parent="operation_menu_categ" action="packing_list_action" sequence="30"/>

</odoo>